/* pages/scene/scene.wxss */

page {
  width: 100%;
  height: 100%;
}

.scene {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.scene-editor {
  flex: 1;
  height: 100rpx;
  /* background-color: #0df; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.scene-editor-main {
  width: 100%;
  height: 100%;
}

.scene-template {
  flex: 0 0 180rpx;
  height: 180rpx;
  margin-top: 30rpx;
  background-color: #eee;
}
.scene-item-wrapper {
  height: 180rpx;
  margin: 0 10rpx;
}
.scene-item {
  position: absolute;
  width: 100%;
  height: 100%;
}
.scene-item-cover {
  width: 100%;
  height: 100%;
}
.scene-item-mask {
  position: absolute;
  width: 100%;
  height: 180rpx;
  background-color: rgba(136, 136, 136, 0.781);
  z-index: 1;
}
.scene-item-checkimg {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  bottom: 5rpx;
  right: 5rpx;
}
.scene-download {
  flex: 0 0 90rpx;
  margin: 10rpx;
}
